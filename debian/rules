#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk

BUILD_ROOT=$(DESTDIR)/$(CURDIR)/debian/$(cdbs_curpkg)
SYS_CONF_DIR=$(BUILD_ROOT)/etc
LIBDIR=$(shell /usr/bin/ruby -rrbconfig -e 'puts Config::CONFIG["rubylibdir"]')
HIERA_DIR=$(BUILD_ROOT)/$(LIBDIR)
BIN_DIR=$(BUILD_ROOT)/usr/bin
DOC_DIR=$(BUILD_ROOT)/usr/share/doc/hiera/

install/hiera::
	mkdir -p $(HIERA_DIR)
	mkdir -p $(BIN_DIR)
	mkdir -p $(DOC_DIR)
	cp -pr  lib/hiera $(HIERA_DIR)
	cp -p lib/hiera.rb $(HIERA_DIR)
	cp -p  bin/* $(BIN_DIR)
	cp -p CHANGES.txt COPYING README.md $(DOC_DIR)

clean::
